<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   
   <!-- defines a Brainfuck view category -->
	<extension
         point="org.eclipse.ui.views">
      <category
            name="Brainfuck"
            id="com.benjholla.eclipse.brainfuck.views.categories">
      </category>
   </extension>
   
   <!-- new project wizard -->
   <extension point="org.eclipse.ui.newWizards">
      <category name="Brainfuck" id="com.benjholla.eclipse.brainfuck.ui.category" />
      <!--<wizard category="com.benjholla.eclipse.brainfuck.ui.category" class="com.benjholla.eclipse.brainfuck.ui.NewProjectWizard" icon="icons/Brainfuck.gif" id="com.benjholla.eclipse.brainfuck.ui.NewProjectWizard" name="Brainfuck Project">-->
      <!-- extending the org.birenheide.bf project, which does not have a project, but does have a category for creating new brainfuck files -->
      <wizard category="org.birenheide.bf.Brainfuck" class="com.benjholla.eclipse.brainfuck.ui.NewProjectWizard" icon="icons/Brainfuck.gif" id="com.benjholla.eclipse.brainfuck.ui.NewProjectWizard" name="Brainfuck Project">
         <description>Creates a new Brainfuck project in the workspace.</description>
      </wizard>
   </extension>
   
   <!-- project nature icon -->
   <extension point="org.eclipse.ui.ide.projectNatureImages">
	<image 
		id="com.benjholla.brainfuck.nature.image"
		natureId="com.benjholla.brainfuck.nature"
		icon="icons/nature.gif">
	</image>
   </extension>
   
   <!-- the following are features for a future me with too much time on my hands... -->
   
   <!-- project builder -->
   <extension id="com.benjholla.brainfuck.builder" name="Brainfuck Project Builder" point="org.eclipse.core.resources.builders">
      <builder hasNature="true">
         <run class="com.benjholla.eclipse.brainfuck.projects.BrainfuckBuilder" />
      </builder>
   </extension>
   
   
   <!-- project build nature -->
   <extension id="com.benjholla.brainfuck.nature" name="Brainfuck Project Nature" point="org.eclipse.core.resources.natures">
      <runtime>
         <run class="com.benjholla.eclipse.brainfuck.projects.BrainfuckNature" />
      </runtime>
      <builder id="com.benjholla.brainfuck.builder" />
   </extension>
   
